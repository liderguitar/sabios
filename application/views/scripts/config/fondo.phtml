<script>
    $(document).ready(function() {
        $(".back-example").click(function(){
            $("body").css("background-image","url(/images/textures/t"+$(this).attr("id")+".png)");
        });
        $(".foto-file input").live('change', function () {
            var id = $(this).attr("id");
            $this = $(this);
            $.ajaxFileUpload
            (
                {
                    url: '/browser/ajaxuploadlogo',
                    secureuri: false,
                    fileElementId: id,
                    dataType: 'json',
                    beforeSend: function () {
                        //
                    },
                    complete: function () {
                        //$("#loading").hide();
                    },
                    success: function (data, status) {
                        console.log(data);
                        if (typeof(data.message) !== 'undefined') {
                            if (data.success) {
                                var number = $("#" + id).attr("number");
                                $("#fotoname-" + number).val(data.fileName);
                                $("#" + id).after("<div class='close'></div><img width='100px' src='" + data.publicFolder + "/" + data.fileName + "'/>");
                                $("#" + id).hide();
                                //$("#" + id).val(data.fileName);
                            } else {
                                alert(data.message);
                            }
                        }
                    },
                    error: function (data, status, e) {
                        alert(e);
                    }
                }
            );
        });
        $(".close").live('click', function() {
            $(this).parent().find("input").val('');
            $(this).parent().find("input").show();
            $(this).parent().find("img").remove();
            $(this).hide();
        });
        $(".help").click(function(){
            sabiosMessageBox("Ayuda", "La imagen puede tener extension jpg gif o png. El tamanio ideal es 400x300");
        });
    });

</script>